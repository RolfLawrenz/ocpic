<p class="home_ocpic"><b>O</b>utdoor <b>C</b>amera <b>Pi</b> <b>C</b>ontroller</p>
<p class="version">Version: <%= APP_VERSION %></p>
<table width="100%">
  <tr>
    <td class="home_image"><%= link_to image_tag("home_camera_#{@camera_active ? 'active' : 'dead'}.png", width: 75), camera_index_path, class: 'home_main_image' %></td>
    <td class="home_image"><%= link_to image_tag('home_pi_active.png', width: 75), pi_index_path, class: 'home_main_image' %></td>
    <td class="home_image"><%= link_to image_tag('home_sensors_active.png', width: 75), sensors_index_path, class: 'home_main_image' %></td>
  </tr>
</table>

<h5 class="content-padded" xmlns="http://www.w3.org/1999/html">Program:</h5>
<ul class="table-view">
  <li class="table-view-cell media">
    <%= link_to(program_index_path, class: "navigate-right") do %>
      <div class="media-body">
        <%= @program_name %>
      </div>
    <% end %>
  </li>
  <li class="table-view-cell media">
    <%= link_to(program_index_path, class: "navigate-right") do %>
      <div class="media-body">
        <%= @running_time %>
      </div>
    <% end %>
  </li>
  <li class="table-view-cell media">
    <%= link_to(photos_index_path, class: "navigate-right") do %>
      <div class="media-body">
        <%= @photo_count %> Photos taken
      </div>
    <% end %>
  </li>
</ul>

<%= render "shared/shutdown_pi_btn" %>
